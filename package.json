  "repository": {
    "type": "git",
    "url": "https://github.com/rgiese/www-grumpycorp-com"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.19",
    "@mdx-js/react": "^1.6.19",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@types/react-helmet": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "ajv": "^6.12.6",
    "cross-var-no-babel": "^1.2.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "fontsource-dosis": "^3.0.5",
    "fontsource-questrial": "^3.0.10",
    "fontsource-quicksand": "^3.0.3",
    "gatsby": "^2.25.1",
    "gatsby-image": "^2.4.21",
    "gatsby-plugin-feed": "^2.6.0",
    "gatsby-plugin-manifest": "^2.5.1",
    "gatsby-plugin-mdx": "^1.3.0",
    "gatsby-plugin-react-helmet": "^3.3.14",
    "gatsby-plugin-sass": "^2.4.1",
    "gatsby-plugin-sharp": "^2.7.0",
    "gatsby-plugin-sitemap": "^2.5.0",
    "gatsby-plugin-typescript": "^2.5.0",
    "gatsby-remark-images": "^3.4.0",
    "gatsby-remark-prismjs": "^3.6.0",
    "gatsby-remark-smartypants": "^2.3.13",
    "gatsby-source-filesystem": "^2.4.0",
    "gatsby-transformer-remark": "^2.9.1",
    "gatsby-transformer-sharp": "^2.5.21",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "prismjs": "^1.22.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "sharp": "^0.26.1",
    "svg-sprite-loader": "^5.0.0",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "tachyons": "^4.12.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "config": {
    "prettierglob_1": "./*.{js,json}",
    "prettierglob_2": "./src/**/*.{css,js,jsx,json,mdx,scss,ts,tsx}"
  },
  "scripts": {
    "clean": "gatsby clean",
    "build": "gatsby build",
    "develop": "gatsby develop --host 0.0.0.0",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "ts:check": "tsc --noEmit",
    "lint": "eslint \"./src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint --fix \"./src/**/*.{js,ts,tsx}\"",
    "format:check": "cross-var prettier --check $npm_package_config_prettierglob_1 --check $npm_package_config_prettierglob_2",
    "format:fix": "cross-var prettier --write $npm_package_config_prettierglob_1 --write $npm_package_config_prettierglob_2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run ts:check && npm run lint"
    }
  },
  "lint-staged": {
    "*.{css,js,jsx,json,mdx,scss,ts,tsx}": "prettier --check"
  }
}
