{
  "scripts": {
    "clean": "rimraf bin cache obj output temp wwwroot",
    "build": "UV_THREADPOOL_SIZE=32 tsx --no-deprecation ./src/index.ts build",
    "build-prod": "tsx --no-deprecation ./src/index.ts build --minify",
    "watch:content": "chokidar 'content/**/*' -c 'npm run build'",
    "serve": "http-server output --port 5080 -c-1",
    "format:fix": "prettier --write .",
    "lint": "tsc --noEmit && DEBUG=eslint:eslint eslint ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tsconfig/recommended": "^1.0.13",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/jsdom": "^27.0.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.10.1",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.39.1",
    "eslint-config-love": "^133.0.0",
    "eta": "^4.4.1",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "html-minifier-terser": "^7.2.0",
    "http-server": "^14.1.1",
    "image-size": "^2.0.2",
    "jsdom": "^27.2.0",
    "marked": "^17.0.0",
    "marked-directive": "^1.0.7",
    "marked-highlight": "^2.2.3",
    "minimist": "^1.2.8",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "sass": "^1.94.1",
    "sharp": "^0.34.5",
    "svgo": "^4.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "yup": "^1.7.1"
  },
  "prettier": {
    "printWidth": 120,
    "overrides": [
      {
        "files": "*.eta",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
