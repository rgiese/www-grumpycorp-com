  "repository": {
    "type": "git",
    "url": "https://github.com/rgiese/www-grumpycorp-com"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.16",
    "@mdx-js/react": "^1.6.16",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "ajv": "^6.12.4",
    "cross-var-no-babel": "^1.2.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "gatsby": "^2.24.47",
    "gatsby-image": "^2.4.16",
    "gatsby-plugin-feed": "^2.5.11",
    "gatsby-plugin-manifest": "^2.4.23",
    "gatsby-plugin-mdx": "^1.2.34",
    "gatsby-plugin-prefetch-google-fonts": "^1.4.3",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-plugin-sass": "^2.3.12",
    "gatsby-plugin-sharp": "^2.6.27",
    "gatsby-plugin-sitemap": "^2.4.11",
    "gatsby-plugin-typescript": "^2.4.18",
    "gatsby-plugin-typescript-checker": "^1.1.1",
    "gatsby-remark-images": "^3.3.25",
    "gatsby-remark-prismjs": "^3.5.10",
    "gatsby-remark-smartypants": "^2.3.10",
    "gatsby-source-filesystem": "^2.3.24",
    "gatsby-transformer-remark": "^2.8.28",
    "gatsby-transformer-sharp": "^2.5.13",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "prismjs": "^1.21.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "svg-sprite-loader": "^5.0.0",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "tachyons": "^4.12.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "config": {
    "prettierglob_1": "./*.{js,json}",
    "prettierglob_2": "./src/**/*.{css,js,jsx,json,mdx,scss,ts,tsx}"
  },
  "scripts": {
    "clean": "gatsby clean",
    "build": "gatsby build",
    "develop": "gatsby develop --host 0.0.0.0",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "ts:check": "tsc --noEmit",
    "lint": "eslint \"./src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint --fix \"./src/**/*.{js,ts,tsx}\"",
    "format:check": "cross-var prettier --check $npm_package_config_prettierglob_1 --check $npm_package_config_prettierglob_2",
    "format:fix": "cross-var prettier --write $npm_package_config_prettierglob_1 --write $npm_package_config_prettierglob_2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run ts:check && npm run lint"
    }
  },
  "lint-staged": {
    "*.{css,js,jsx,json,mdx,scss,ts,tsx}": "prettier --check"
  }
}
