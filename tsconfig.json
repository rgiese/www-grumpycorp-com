{
  "include": ["./src/**/*", "./gatsby-node.ts", "./gatsby-config.ts"],
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",

    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,

    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true,

    "typeRoots": ["./node_modules/@types", "./src/@types"]
  }
}
