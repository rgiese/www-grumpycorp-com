<h1 class="mb1"><a href="."><%= data.inputDocument.frontMatter.title %></a></h1>

<div class="f5 black-60">
  <%= data.inputDocument.frontMatter.published.toLocaleDateString() %>
  <span class="ph2 black-40">in</span>

  <% const tagForPost = data.api.path.dirname(data.inputDocument.relativePath) %>

  <a href="/tags/posts/<%= tagForPost %>" class="link accent-mono">
    <img class="w1 h1 v-mid" src="/assets/icons/tag.svg" alt="tag" />
    <%= tagForPost %>
  </a>
</div>
