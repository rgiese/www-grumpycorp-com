  "repository": {
    "type": "git",
    "url": "https://github.com/rgiese/www-grumpycorp-com"
  },
  "dependencies": {
    "@fontsource/dosis": "^4.5.9",
    "@fontsource/questrial": "^4.5.9",
    "@fontsource/quicksand": "^4.5.10",
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@types/node": "^15.14.9",
    "@types/react": "^17.0.50",
    "@types/react-dom": "^17.0.17",
    "@types/react-helmet": "^6.1.5",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "cross-var-no-babel": "^1.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "gatsby": "^3.14.6",
    "gatsby-image": "^3.11.0",
    "gatsby-plugin-feed": "^3.14.0",
    "gatsby-plugin-image": "^1.14.2",
    "gatsby-plugin-manifest": "^3.14.0",
    "gatsby-plugin-mdx": "^2.14.2",
    "gatsby-plugin-react-helmet": "^4.14.0",
    "gatsby-plugin-sass": "^4.14.0",
    "gatsby-plugin-sharp": "^3.14.3",
    "gatsby-plugin-sitemap": "^4.10.0",
    "gatsby-plugin-typescript": "^3.14.0",
    "gatsby-remark-images": "^5.11.0",
    "gatsby-remark-prismjs": "^5.11.0",
    "gatsby-remark-smartypants": "^4.11.0",
    "gatsby-source-filesystem": "^3.14.0",
    "gatsby-transformer-remark": "^4.11.0",
    "gatsby-transformer-sharp": "^3.14.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "node-sass": "^7.0.3",
    "prettier": "^2.7.1",
    "prismjs": "^1.29.0",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "sharp": "^0.28.3",
    "svg-sprite-loader": "^6.0.11",
    "tachyons": "^4.12.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "config": {
    "prettierglob_1": "./*.{js,json}",
    "prettierglob_2": "./src/**/*.{css,js,jsx,json,mdx,scss,ts,tsx}"
  },
  "scripts": {
    "clean": "gatsby clean",
    "build": "gatsby build",
    "develop": "gatsby develop --host 0.0.0.0",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "ts:check": "tsc --noEmit",
    "lint": "eslint \"./src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint --fix \"./src/**/*.{js,ts,tsx}\"",
    "format:check": "cross-var prettier --check $npm_package_config_prettierglob_1 --check $npm_package_config_prettierglob_2",
    "format:fix": "cross-var prettier --write $npm_package_config_prettierglob_1 --write $npm_package_config_prettierglob_2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run ts:check && npm run lint"
    }
  },
  "lint-staged": {
    "*.{css,js,jsx,json,mdx,scss,ts,tsx}": "prettier --check"
  }
}
