{
  "name": "www-grumpycorp-com",
  "private": true,
  "description": "GrumpyCorp Creative Industries",
  "version": "0.1.0",
  "author": "Robin Giese <robin@grumpycorp.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/rgiese/www-grumpycorp-com"
  },
  "commentsAboutDependencies": {
    "prettier": "Of late prettier has been having some issues with its MDX support. Update carefully (or not at all)."
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.5.5",
    "@mdx-js/react": "^1.5.5",
    "@types/node": "^13.5.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-helmet": "^5.0.15",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "ajv": "^6.11.0",
    "cross-var-no-babel": "^1.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "gatsby": "^2.19.5",
    "gatsby-image": "^2.2.39",
    "gatsby-plugin-manifest": "^2.2.38",
    "gatsby-plugin-mdx": "^1.0.67",
    "gatsby-plugin-prefetch-google-fonts": "^1.4.3",
    "gatsby-plugin-react-helmet": "^3.1.21",
    "gatsby-plugin-sass": "^2.1.27",
    "gatsby-plugin-sharp": "^2.4.0",
    "gatsby-plugin-typescript": "^2.1.26",
    "gatsby-plugin-typescript-checker": "^1.1.1",
    "gatsby-remark-images": "^3.1.42",
    "gatsby-remark-prismjs": "^3.3.30",
    "gatsby-remark-smartypants": "^2.1.20",
    "gatsby-source-filesystem": "^2.1.46",
    "gatsby-transformer-remark": "^2.6.48",
    "gatsby-transformer-sharp": "^2.3.13",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "node-sass": "^4.13.1",
    "prettier": "prettier/prettier",
    "prismjs": "^1.19.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "svg-sprite-loader": "^4.2.0",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "tachyons": "^4.11.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "config": {
    "prettierglob": "{.,./src/**}/*.{css,js,jsx,json,mdx,scss,ts,tsx}"
  },
  "scripts": {
    "clean": "gatsby clean",
    "build": "gatsby build",
    "develop": "gatsby develop --host 0.0.0.0",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "ts:check": "tsc --noEmit",
    "lint": "eslint \"./src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint --fix \"./src/**/*.{js,ts,tsx}\"",
    "format:check": "cross-var prettier --check $npm_package_config_prettierglob",
    "format:fix": "cross-var prettier --write $npm_package_config_prettierglob"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run ts:check && npm run lint"
    }
  },
  "lint-staged": {
    "*.{css,js,jsx,json,mdx,scss,ts,tsx}": "prettier --check"
  }
}
