<h1 class="mb1">@(Document.GetString("Title") ?? Document.GetString("SiteTitle"))</h1>

<div class="f5 black-60">
  @(Document.GetString("published"))

  <span class="ph2 black-40">in</span>

  <a href="/tags/posts/@Site.GetTagForPost(Document)" class="link accent-mono">
    <img class="w1 h1 v-mid" src='@Context.GetLink("/assets/icons/tag.svg")' alt="tag" />
    @Site.GetTagForPost(Document)
  </a>
</div>
