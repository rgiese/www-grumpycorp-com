{
  "scripts": {
    "clean": "rimraf bin cache obj output temp wwwroot",
    "build": "UV_THREADPOOL_SIZE=32 tsx --no-deprecation ./src/index.ts build",
    "build-prod": "tsx --no-deprecation ./src/index.ts build --minify",
    "serve": "http-server output --port 5080 -c-1",
    "format:fix": "prettier --write .",
    "lint": "tsc --noEmit && eslint ."
  },
  "devDependencies": {
    "@minify-html/node": "^0.15.0",
    "@tsconfig/recommended": "^1.0.5",
    "@types/jsdom": "^21.1.6",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "eslint": "^8.57.0",
    "eta": "^3.4.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.9.0",
    "http-server": "^14.1.1",
    "image-size": "^1.1.1",
    "jsdom": "^24.0.0",
    "marked": "^12.0.1",
    "marked-directive": "^1.0.5",
    "marked-highlight": "^2.1.1",
    "minimist": "^1.2.8",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sass": "^1.72.0",
    "sharp": "^0.33.3",
    "tsx": "^4.7.1",
    "yup": "^1.4.0"
  },
  "prettier": {
    "printWidth": 120,
    "overrides": [
      {
        "files": "*.eta",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
